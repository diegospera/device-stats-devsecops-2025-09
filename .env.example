# Environment configuration for Safra Bank Device Statistics
# Copy this file to .env and modify as needed

# Database Configuration
DB_USERNAME=safra_user
DB_PASSWORD=safra_password
DB_NAME=safra_device_stats
DB_HOST=localhost
DB_PORT=5432

# API Configuration
STATISTICS_API_PORT=8080
DEVICE_REGISTRATION_API_PORT=8081

# Security Configuration (for production)
JWT_SECRET=your-jwt-secret-key-here
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# JVM Configuration
JAVA_OPTS_STATISTICS=-Xmx512m -Xms256m
JAVA_OPTS_DEVICE_REG=-Xmx512m -Xms256m